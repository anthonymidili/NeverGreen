.grid-x
  .cell.medium-10.medium-offset-1
    %h1 Band Members

    - if valid_admin?
      %p= link_to 'Invite another band member', new_user_invitation_path, class: 'button'

    %table
      %thead
        %tr
          %td Name
          %td Email
          %td Signed in
          - if valid_admin?
            %td Kick out
      %tboby.dark_links
        - @band_members.each do |user|
          %tr
            %td= user.name
            %td= user.email
            %td= user.current_sign_in_at.in_time_zone(user.timezone).strftime('%D at %I:%M%p')
            - if valid_admin?
              %td
                = link_to band_member_path(user),
                method: :delete, data: { confirm: 'Are you sure?' } do
                  = fa_icon 'biohazard', class: 'remove_link',
                  title: 'Kick out of the band'
