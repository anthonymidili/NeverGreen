%h1 Change your timezone
= form_with model: @user, url: users_timezones_path,
local: true do |f|
  = render 'notifications/error_messages', object: f.object
  = hidden_field_tag :return_to, @return_to

  .field
    = f.label :timezone
    = f.time_zone_select(:timezone, ActiveSupport::TimeZone.us_zones)
  .actions
    = f.submit 'Update Timezone', class: 'button'
