.grid-x
  .cell.medium-6.medium-offset-3
    %h2= t "devise.invitations.new.header"
    = form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :post }) do |f|
      = render 'notifications/error_messages', object: f.object
      - resource.class.invite_key_fields.each do |field|
        .field
          = f.label :name
          = f.text_field :name
        .field
          = f.label field
          = f.text_field field
      .actions
        = f.submit t("devise.invitations.new.submit_button"), class: 'button'
    = link_to 'Cancel invitation', band_members_directory_path, class: 'alert button'
