= form_with model: @project, local: true do |f|
  = render 'notifications/error_messages', object: f.object

  .grid-x
    .cell
      .field
        = f.label :name
        = f.text_field :name
  .grid-x
    .cell
      .field
        = f.label :tracks
        = f.file_field :tracks, multiple: true, direct_upload: true
  .grid-x
    .medium-6.cell
      .actions
        = f.submit class: 'button'
  .grid-x
    .cell
      - if f.object.tracks.attached? && f.object.valid?
        - f.object.tracks.each do |track|
          = display_track(track)
          = link_to 'Remove', project_remove_track_path(f.object, track)
          %br/
